{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "ES2016"],
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
